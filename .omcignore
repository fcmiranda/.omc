!.config/waybar/
!.config/waybar/**
!.config/waybar/includes/
!.config/waybar/includes/**
!.config/waybar/modules/
!.config/waybar/modules/**
!.config/waybar/styles/
!.config/waybar/styles/**

!.config/walker
!.config/walker/**

!.config/mako
!.config/mako/**

!.local
!.local/share
!.local/share/waybar
